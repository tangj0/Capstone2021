<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton0Left"
        android:layout_width="120dp"
        android:layout_height="138.56dp"
        android:background="@drawable/empty_hex"
        android:layout_marginStart="-65dp"
        android:layout_marginLeft="-65dp"
        android:layout_marginTop="-109.697dp"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1Mid"
        app:layout_constraintTop_toTopOf="@id/imageButton1Mid" />

    <ImageButton
        android:id="@+id/imageButton0Right"
        android:layout_width="120dp"
        android:layout_height="138.56dp"
        android:background="@drawable/empty_hex"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@id/imageButton0Left"
        app:layout_constraintTop_toTopOf="@id/imageButton0Left" />

    <ImageButton
        android:id="@+id/imageButton1Mid"
        android:layout_width="120dp"
        android:layout_height="138.56dp"
        android:layout_marginTop="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/this_hex" />

    <ImageButton
        android:id="@+id/imageButton1Left"
        android:layout_width="120dp"
        android:layout_height="138.56dp"
        android:background="@drawable/empty_hex"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/imageButton1Mid"
        app:layout_constraintTop_toTopOf="@id/imageButton1Mid" />

    <ImageButton
        android:id="@+id/imageButton1Right"
        android:layout_width="120dp"
        android:layout_height="138.56dp"
        android:background="@drawable/empty_hex"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/imageButton1Mid"
        app:layout_constraintTop_toTopOf="@id/imageButton1Mid" />

    <ImageButton
        android:id="@+id/imageButton2Left"
        android:layout_width="120dp"
        android:layout_height="138.56dp"
        android:background="@drawable/empty_hex"
        android:layout_marginStart="-65dp"
        android:layout_marginLeft="-65dp"
        android:layout_marginTop="109.697dp"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1Mid"
        app:layout_constraintTop_toTopOf="@id/imageButton1Mid" />

    <ImageButton
        android:id="@+id/imageButton2Right"
        android:layout_width="120dp"
        android:layout_height="138.56dp"
        android:background="@drawable/empty_hex"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@id/imageButton2Left"
        app:layout_constraintTop_toTopOf="@id/imageButton2Left" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButton1Mid"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/btnRateImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Images"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogout"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnUploadImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Images"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRateImages"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnUserStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Stats"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUploadImages"
        android:layout_marginTop="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>